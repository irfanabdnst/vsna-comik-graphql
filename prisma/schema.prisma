// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  username  String   @unique
  password  String
  role      Role?    @default(USER)
  comicIDs  String[] @db.ObjectId
  bookmarks Comic[]  @relation(fields: [comicIDs], references: [id])
}

model Comic {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  published Boolean? @default(false)
  status    Status?  @default(READING)
  userIDs   String[] @db.ObjectId
  sourceIDs String[] @db.ObjectId
  users     User[]   @relation(fields: [userIDs], references: [id])
  sources   Source[] @relation(fields: [sourceIDs], references: [id])
}

model Source {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  homepageUrl String?
  imageUrl    String?
  comicIDs    String[] @db.ObjectId
  comics      Comic[]  @relation(fields: [comicIDs], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum Status {
  READING
  ON_HOLD
  PLAN_TO_READ
  COMPLETED
  DROPPED
}
